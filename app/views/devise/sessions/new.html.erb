<main class= "container">
  <header class= "row"> 
    <h2>Log in</h2>
  </header>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>
            <div class="btn-group mb-3">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <span class="badge bg-light text-dark"> remember me </span>
            </div>
      </div>

      <div class="mb-3">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

</main>

