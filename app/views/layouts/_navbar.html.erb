<header class="navbar shadow p-3 mb-5 bg-body">
  <% if user_signed_in? %>
    <div class="navbar-brand">
      Company: <%= current_company.name %>
    </div>
    <div class="navbar-name">
      User: <%= current_user.name %>
    </div>
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  method: :delete,
                  class: "btn btn-dark" %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn-dark navbar-right" %>
  <% end %>
  <%= link_to "Home",
                root_path,
                class: "btn btn-dark navbar-right" %>
</header>