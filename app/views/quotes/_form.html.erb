<div class="container">
  <% if quote.errors.any?%>
    <div class="alert alert-warning alert-dismissible fade show">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12 col-xl-6">
      <div class="d-flex">
        <%= simple_form_for quote, html: { class: "input-group" } do |f| %>
          <div class="p-2 flex-grow-1">
            <%= f.input :name, input_html: { autofocus: true, class: "form-control btn" } %>
          </div>
          <div class="p-2">
            <%= f.submit class: "btn btn-light" %>
          </div>
          <div class="p-2">
            <%= link_to quotes_path, class: "btn btn-light" do %>
              <i class="bi bi-arrow-return-left"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>