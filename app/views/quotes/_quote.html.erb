  
  <%= turbo_frame_tag "quote_#{quote.id}" do %>
  <div class="row">
    <div class="col-6">
      <div class="d-flex">
            <div class="p-2 flex-grow-1">
              <%= link_to quote.name, 
                quote_path(quote),
                class: "btn btn-outline" %>
            </div>
            <div class="p-2">
              <%= button_to quote_path(quote),
                method: :delete,
                class: "btn btn-light" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
            <div class="p-2">
              <%= link_to edit_quote_path(quote),
                class: "btn btn-light" do %>
                <i class="bi bi-pencil-square"></i>
              <% end %>
            </div>
      </div>
    </div>
  </div>
  <% end %>